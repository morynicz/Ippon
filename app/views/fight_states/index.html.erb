<div class="item_list">
  <table>

  <div class="form">
    <%= form_for(@fight_state) do |f| %>
      <div class="field">
        <tr>
        <th><%= f.label :name %></th>
        <th></th>
      </tr>
      <tr>
        <td><%= f.text_field :name %></td>
        <td><div class="actions">
        <%=f.submit :create %>
      </div></tr>
      </div>

    <% end %>
    </div>
  <% @fight_states.each do |f| %>
  <div class="item_row">
  <tr>
    <td><%= f.name %></td>
    <td><div class="actions"><%= link_to :edit, edit_fight_state_path(f) %></div></td>
  </tr>
  <% end %>
</table>
</div>
