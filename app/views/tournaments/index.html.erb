<div class="item_list">
  <table>
  <tr>
    <th>Name</th>
    <th colspan="3">Action</th>
  </tr>
  <% @tournaments.each do |t| %>
  <tr>
    <td><%= t.name %></td>
    <td><div class="actions"><%= link_to :show, tournament_path(t) %></div></td>
    <td><div class="actions"><%= link_to :edit, edit_tournament_path(t) %></div></td>
    <td><div class="actions"><%= link_to "delete", t, method: :delete,
                                  data: { confirm: "You sure?" } %></div></td>
  </tr>
  <% end %>
</table>
</div>
<%= link_to 'New tournament', '/tournaments/new' %>
